  "private": true,
  "main": "build/ssr/server.js",
  "scripts": {
    "start": "react-scripts-ts start",
    "test": "react-scripts-ts test --env=jsdom",
    "build:client": "react-scripts-ts build",
    "build:server": "rm -rf build/ssr && tsc --pretty -p tsconfig.server.json",
    "build": "yarn build:client && yarn build:server",
    "serve": "sudo firebase serve --only functions,hosting -p 3001",
    "deploy": "yarn build && firebase deploy --only functions,hosting"
  },
  "dependencies": {
    "express": "^4.16.3",
    "firebase-admin": "^5.12.1",
    "firebase-functions": "^1.0.3",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-scripts-ts": "2.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^23.0.0",
    "@types/node": "^10.3.0",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.5",
    "typescript": "^2.9.1"
  }
}
